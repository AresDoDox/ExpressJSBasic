extends ../layouts/common
block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/auth/login", method="POST")
        .form-group
            label(for="email") Email: 
            input(type="email", name="email" , id="email", class="form-control", value = values ? values.email : '')
        .form-group
            label(for="password") Password: 
            input(type="password", name="password", id="password" , class="form-control", value = values ? values.password : '')
        button(class="btn btn-primary") Login