extends ../layouts/common
block content
    h1 
        span.mr-3 Users
        a.btn.btn-primary(href="/users/create") New
    .d-flex.align-items-center
        
        form.ml-auto(action="/users/search", method="GET" class="d-flex")
            input.mr-2(type="text", name="q", class="form-control")
            button(class="btn btn-primary") Search
    table.table
        tr
            th Name
            th Avatar
            th Phone
            th Actions
        each user in users
            tr
                td= user.name
                td
                    if(user.avatar)
                        img(src=user.avatar, width="32")
                    else
                        img(src="uploads/img-default.png", width="32")
                td= user.phone
                td 
                    a.btn.btn-light(href="/users/" + user.id) View