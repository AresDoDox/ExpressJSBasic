extends ../layouts/common
block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST", enctype="multipart/form-data")
        .form-group
            label(for="email") Email: 
            input(type="email", name="email" , id="email", class="form-control", value = values ? values.email : '')
        .form-group
            label(for="password") Password: 
            input(type="password", name="password" , id="password", class="form-control")
        .form-group
            label(for="name") Name: 
            input(type="text", name="name" , id="name", class="form-control", value = values ? values.name : '')
        .form-group
            label(for="phone") Phone: 
            input(type="text", name="phone", id="phone" , class="form-control", value = values ? values.phone : '')
        .form-group
            label(for="avatar") Avatar: 
            input(type="file", name="avatar", id="avatar" , class="form-control-file")
        button(class="btn btn-primary") Create